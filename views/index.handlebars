  <div class="teamData container">
        <div class="row">
            <div class="col">TeamID</div>
            <div class="col">Team Name</div>
            <div class="col">Wins</div>
            <div class="col">Losses</div>
            <div class="col">Win %</div>
            <div class="col">Home Record</div>
            <div class="col">Away Record</div>
        </div>
           <div class="row">
            {{#each teamInfo}}
            <div class="col">{{this}}</div>
            {{/each}}
        </div>
    </div>

<div class="container text-center">
    <h1>Leaderboards</h1>
</div>
<div class="container">
<select name="NumTeamDisplay" id="filterSelect">
    <option value="1">Top 5</option>
    <option value="2">All</option>
</select>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Team</th>
      <th scope="col">Record</th>
      <th scope="col">Win%</th>
      <th scope="col">Home Record</th>
      <th scope="col">Away Record</th>
    </tr>
  </thead>
  <tbody>
      {{#each top5Team}}
    <tr>
      <th scope="row">{{Team}}</th>
      <td>{{Record}}</td>
      <td>{{win_percent}}</td>
      <td>{{home_record}}</td>
      <td>{{away_record}}</td>
    </tr>
    {{/each}}

  </tbody>
</table>

</div>


<ul>
{{#each top5team}}
<li>{{Team}}</li>
{{/each}}
</ul>

<div class="container">
    <table class="table table-sm table-hover">

