    {{#each playerInfo}}
    <div class="container playerProfile">
        <div class="row">
            <div class="col-sm-3 playerImage">
                <img src={{player_image}}>
            </div>
            <div class="col-sm-8 playerName">
                <div class="row">
                    <h2>{{first_name}} {{last_name}}</h2>
                </div>
                <div class="row playerVitals">
                    <span style="display:inline-block">
                        <h4>Position: {{position}}</h4>
                        <h4>Height: {{height}}</h4>
                    </span>
                </div>
                <div class="row playerStats">
                    <table class="table table-hover table-sm table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">GP</th>
                                <th scope="col">PTS</th>
                                <th scope="col">REB</th>
                                <th scope="col">AST</th>
                                <th scope="col">FGA</th>
                                <th scope="col">FG%</th>
                                <th scope="col">FG3A</th>
                                <th scope="col">FG3%</th>
                                <th scope="col">FT%</th>
                                <th scope="col">STL</th>
                                <th scope="col">BLK</th>
                                <th scope="col">TOV</th>
                                <th scope="col">PF</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">{{games_played}}</th>
                                <td>{{points}}</td>
                                <td>{{rebounds}}</td>
                                <td>{{assists}}</td>
                                <td>{{field_goal_attempted}}</td>
                                <td>{{field_goal_pct}}</td>
                                <td>{{field_goal_3attempted}}</td>
                                <td>{{field_goal_3pct}}</td>
                                <td>{{free_throw_pct}}</td>
                                <td>{{steals}}</td>
                                <td>{{blocks}}</td>
                                <td>{{turnovers}}</td>
                                <td>{{personal_fouls}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    {{/each}}


